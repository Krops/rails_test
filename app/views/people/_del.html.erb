
<div class="modal-dialog">
  <div class="modal-content">
  <div class="header">
    <h1>Delete Person</h1>
  </div>
  <div class="modal-body">
  <ul class="errors"></ul>
  Are you sure you wish to delete <b><%= @person.Name %> <%= @person.Last_Name %></b>?
  </div>
  <div class="modal-footer">
    <%= link_to "Yes, Delete This Person", person_path(@person), method: :delete, remote: true, class: "btn btn-danger" %>
    <%= link_to "No, Please Don't", "#", class: "btn btn-default", data: { dismiss: "modal" } %>
  </div>
  </div>
</div>